{
  "name": "sibna-wasm",
  "version": "7.0.0",
  "description": "WebAssembly bindings for Sibna secure communication protocol",
  "main": "pkg/sibna.js",
  "types": "pkg/sibna.d.ts",
  "scripts": {
    "build": "wasm-pack build --target web --out-dir pkg",
    "build-node": "wasm-pack build --target nodejs --out-dir pkg-node",
    "test": "wasm-pack test --headless --chrome",
    "publish": "wasm-pack publish"
  },
  "keywords": [
    "encryption",
    "e2ee",
    "signal",
    "protocol",
    "wasm",
    "webassembly",
    "x3dh",
    "double-ratchet"
  ],
  "author": "Sibna Team",
  "license": "Apache-2.0 OR MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sibna/protocol"
  },
  "files": [
    "pkg/",
    "README.md"
  ],
  "devDependencies": {
    "wasm-pack": "^0.12.0"
  }
}
